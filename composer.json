{
    "name": "gilbitron/handle",
    "description": "A CLI based static site generator in PHP",
    "keywords": ["cli", "static", "site", "generator"],
    "license": "MIT",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/gilbitron/handle"
        }
    ],
    "authors": [
        {
            "name": "Gilbert Pellegrom",
            "email": "gilbert@pellegrom.me"
        }
    ],
    "require": {
        "symfony/console": "^3.0",
        "windwalker/renderer": "^2.1",
        "illuminate/view": "^5.2",
        "erusev/parsedown": "^1.6",
        "symfony/yaml": "^3.0",
        "padraic/phar-updater": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Handle\\": "src/",
            "Handle\\Tests\\": "tests/"
        }
    }
}
